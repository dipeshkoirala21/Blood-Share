<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="anmol.com.shareblood.RequestBloodActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="9dp"
        android:background="@drawable/border"
        android:id="@+id/bloodFor">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Blood For :"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="start"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:orientation="horizontal"
                android:id="@+id/radioGroup1">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Self"
                    android:textColor="@android:color/darker_gray"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Other"
                    android:textColor="@android:color/darker_gray"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="6dp"
        android:background="@drawable/border"
        android:layout_below="@+id/bloodFor"
        android:id="@+id/LLName">

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@drawable/border"
            android:hint="Name"
            android:padding="9dp" />

        <EditText
            android:id="@+id/etName2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:textSize="18sp"
            android:padding="9dp"
            android:visibility="gone"
            android:background="@drawable/border"
            android:hint="Last Name"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:weightSum="2"
        android:id="@+id/LLgender"
        android:background="@drawable/border"
        android:padding="9dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gender :"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="start"
            />
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:id="@+id/radioGroup2">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@android:color/darker_gray"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@android:color/darker_gray"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:id="@+id/LLBloodGroup"
        android:background="@drawable/border"
        android:layout_below="@+id/LLgender">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:padding="9dp"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/tvBloodGroup"/>

        <Spinner
            android:id="@+id/spinnerBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/blood_group"
            android:gravity="start" />

    </LinearLayout>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="6dp"
            android:padding="9dp"
            android:textColor="#000000"
            android:minLines="2"
            android:textSize="18sp"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="6dp"
            android:textColor="#000000"
            android:hint="Number"
            android:padding="9dp"
            android:textSize="18sp"

            android:background="@drawable/border"/>


        <EditText
            android:id="@+id/etHospitalAddress"
            android:layout_width="match_parent"
            android:hint="Hospital Address"
            android:padding="9dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Blood Units"
            android:background="@drawable/border"
            android:padding="9dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/etBloodUnits"
            android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:id="@+id/LLrequiredUpto"
        android:background="@drawable/border"
        android:padding="9dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Required up to Date: "
            android:background="@drawable/border"
            android:padding="9dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/tvRequiredUpto"
            android:inputType="date"/>
    </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message to donor"
            android:padding="9dp"
            android:visibility="gone"
            android:minLines="2"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            android:background="@drawable/border"/>

</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:id="@+id/btnSubmit" />

</RelativeLayout>